<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
            http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">

    <bean id="card_1" parent="default_card">
        <property name="name" value="Air Spirit"/>
        <property name="level1">
            <bean parent="default_creature_level">
                <property name="keywords">
                    <util:list>
                        <ref bean="move1"/>
                    </util:list>
                </property>
                <property name="attack" value="6"/>
                <property name="health" value="4"/>
            </bean>
        </property>
        <property name="level2">
            <bean parent="default_creature_level">
                <property name="keywords">
                    <util:list>
                        <ref bean="move2"/>
                    </util:list>
                </property>
                <property name="attack" value="10"/>
                <property name="health" value="8"/>
            </bean>
        </property>
        <property name="level3">
            <bean parent="default_creature_level">
                <property name="keywords">
                    <util:list>
                        <ref bean="move3"/>
                    </util:list>
                </property>
                <property name="attack" value="16"/>
                <property name="health" value="14"/>
            </bean>
        </property>
    </bean>

    <bean id="card_2" parent="default_card">
        <property name="name" value="Flameshaper Acolyte"/>
        <property name="level1">
            <bean parent="default_creature_level">
                <property name="attack" value="4"/>
                <property name="health" value="6"/>
            </bean>
        </property>
        <property name="level2">
            <bean parent="default_creature_level">
                <property name="attack" value="6"/>
                <property name="health" value="10"/>
                <property name="triggeredEffects">
                    <bean parent="default_triggered_effect">
                        <property name="gameObjectEventCondition">
                            <bean class="com.gempukku.tcg.solforge.play.PlayCardEventCondition">
                                <property name="playedPlayer" value="*{owner}"/>
                                <property name="playedFilter">
                                    <bean class="com.gempukku.tcg.generic.filter.GameObjectPropertyFilter">
                                        <property name="property" value="level"/>
                                        <property name="value" value="1"/>
                                    </bean>
                                </property>
                            </bean>
                        </property>
                        <property name="triggerId" value="deal3DamageTrigger"/>
                    </bean>
                </property>
            </bean>
        </property>
        <property name="level3">
            <bean parent="default_creature_level">
                <property name="attack" value="10"/>
                <property name="health" value="14"/>
                <property name="triggeredEffects">
                    <bean parent="default_triggered_effect">
                        <property name="gameObjectEventCondition">
                            <bean class="com.gempukku.tcg.solforge.play.PlayCardEventCondition">
                                <property name="playedPlayer" value="*{owner}"/>
                                <property name="playedFilter">
                                    <bean class="com.gempukku.tcg.generic.filter.GameObjectPropertyFilter">
                                        <property name="property" value="level"/>
                                        <property name="value" value="1"/>
                                    </bean>
                                </property>
                            </bean>
                        </property>
                        <property name="triggerId" value="dea6DamageTrigger"/>
                    </bean>
                </property>
            </bean>
        </property>
    </bean>

    <bean id="card_3" parent="default_card">
        <property name="name" value="Lightning Wyrm"/>
        <property name="level1">
            <bean parent="default_creature_level">
                <property name="keywords">
                    <util:list>
                        <ref bean="swiftness"/>
                    </util:list>
                </property>
                <property name="attack" value="4"/>
                <property name="health" value="2"/>
            </bean>
        </property>
        <property name="level2">
            <bean parent="default_creature_level">
                <property name="keywords">
                    <util:list>
                        <ref bean="swiftness"/>
                    </util:list>
                </property>
                <property name="attack" value="9"/>
                <property name="health" value="4"/>
            </bean>
        </property>
        <property name="level3">
            <bean parent="default_creature_level">
                <property name="keywords">
                    <util:list>
                        <ref bean="swiftness"/>
                    </util:list>
                </property>
                <property name="attack" value="14"/>
                <property name="health" value="6"/>
            </bean>
        </property>
    </bean>

    <bean id="card_4_trigger" parent="default_triggered_effect">
        <property name="gameObjectEventCondition">
            <bean class="com.gempukku.tcg.solforge.damage.DealDamageToOpponentEventCondition"/>
        </property>
        <property name="triggerId" value="card_4_trigger_effect"/>
    </bean>

    <bean id="card_4_trigger_effect" parent="default_trigger">
        <property name="resolveGameObjectEffects">
            <bean parent="destroyObjectInPlay">
            </bean>
        </property>
    </bean>

    <bean id="card_4" parent="default_card">
        <property name="name" value="Rumbling Earthshaker"/>
        <property name="level1">
            <bean parent="default_creature_level">
                <property name="keywords">
                    <util:list>
                        <ref bean="move1"/>
                    </util:list>
                </property>
                <property name="attack" value="3"/>
                <property name="health" value="7"/>
                <property name="triggeredEffects" ref="card_4_trigger"/>
            </bean>
        </property>
        <property name="level2">
            <bean parent="default_creature_level">
                <property name="keywords">
                    <util:list>
                        <ref bean="move1"/>
                    </util:list>
                </property>
                <property name="attack" value="8"/>
                <property name="health" value="11"/>
                <property name="triggeredEffects" ref="card_4_trigger"/>
            </bean>
        </property>
        <property name="level3">
            <bean parent="default_creature_level">
                <property name="keywords">
                    <util:list>
                        <ref bean="move1"/>
                    </util:list>
                </property>
                <property name="attack" value="13"/>
                <property name="health" value="18"/>
                <property name="triggeredEffects" ref="card_4_trigger"/>
            </bean>
        </property>
    </bean>

    <bean id="deal3DamageTrigger" parent="default_trigger">
        <property name="announceGameObjectEffects">
            <bean parent="selectionEffect">
                <property name="selectingPlayer" value="*{owner}"/>
                <property name="message" value="Choose creature or player to deal 3 damage to"/>
                <property name="playerFilter" ref="anyPlayer"/>
                <property name="zone" value="play"/>
                <property name="gameObjectFilter" ref="creature"/>
            </bean>
        </property>
        <property name="resolveGameObjectEffects">
            <bean parent="damageToTargetEffect">
                <property name="damage" value="3"/>
            </bean>
        </property>
    </bean>

    <bean id="deal6DamageTrigger" parent="default_trigger">
        <property name="announceGameObjectEffects">
            <bean parent="selectionEffect">
                <property name="selectingPlayer" value="*{owner}"/>
                <property name="message" value="Choose creature or player to deal 6 damage to"/>
                <property name="playerFilter" ref="anyPlayer"/>
                <property name="zone" value="play"/>
                <property name="gameObjectFilter" ref="creature"/>
            </bean>
        </property>
        <property name="resolveGameObjectEffects">
            <bean parent="damageToTargetEffect">
                <property name="damage" value="6"/>
            </bean>
        </property>
    </bean>
</beans>