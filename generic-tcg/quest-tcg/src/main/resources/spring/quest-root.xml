<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">

    <bean id="questRootAction" class="com.gempukku.tcg.generic.actions.EventAction" scope="prototype">
        <property name="events">
            <util:list>
                <bean class="com.gempukku.tcg.generic.events.SetGameObjectEvent">
                    <property name="gameObjectName">
                        <util:constant static-field="com.gempukku.tcg.quest.QuestConstants.CARD_CONTAINER"/>
                    </property>
                    <property name="value" ref="questCardContainer"/>
                </bean>
                <bean class="com.gempukku.tcg.generic.events.SetGameObjectEvent">
                    <property name="gameObjectName">
                        <util:constant static-field="com.gempukku.tcg.quest.QuestConstants.CARD_ID_MANAGER"/>
                    </property>
                    <property name="value">
                        <bean class="com.gempukku.tcg.generic.objects.CardIdManager"/>
                    </property>
                </bean>
                <bean class="com.gempukku.tcg.generic.events.SetGameObjectEvent">
                    <property name="gameObjectName">
                        <util:constant static-field="com.gempukku.tcg.quest.QuestConstants.TRIGGER_MANAGER"/>
                    </property>
                    <property name="value" ref="questTriggerManager"/>
                </bean>
                <bean class="com.gempukku.tcg.generic.events.SetGameObjectEvent">
                    <property name="gameObjectName">
                        <util:constant static-field="com.gempukku.tcg.generic.mtg.MtgConstants.TURN_ORDER"/>
                    </property>
                    <property name="value" ref="questTurnOrder"/>
                </bean>
                <bean class="com.gempukku.tcg.generic.events.SetGameObjectEvent">
                    <property name="gameObjectName">
                        <util:constant static-field="com.gempukku.tcg.generic.mtg.MtgConstants.MESSAGE_DISPLAY"/>
                    </property>
                    <property name="value" ref="questMessageDisplay"/>
                </bean>
                <bean class="com.gempukku.tcg.quest.SetupQuestGame">
                    <property name="deckLocation" value="deck"/>
                    <property name="playersLocation" value="players"/>
                </bean>
                <bean class="com.gempukku.tcg.generic.mtg.events.TurnOrderSetupEvent">
                    <property name="objectName" value="players"/>
                </bean>
                <bean class="com.gempukku.tcg.generic.events.StackActionEvent">
                    <property name="action" ref="questGameLoopAction"/>
                </bean>
            </util:list>
        </property>
    </bean>

    <bean id="questGameLoopAction" class="com.gempukku.tcg.quest.QuestGameLoopAction">

    </bean>

    <bean id="questTriggerManager" class="com.gempukku.tcg.generic.mtg.objects.TriggerManager" scope="prototype">
        <property name="gameEventListeners">
            <util:set>

            </util:set>
        </property>
    </bean>

    <bean id="questCardContainer" class="com.gempukku.tcg.generic.objects.CardContainer" scope="prototype">
        <property name="sharedZoneNames">
            <util:set>
                <value>play</value>
            </util:set>
        </property>
        <property name="playerZoneNames">
            <util:set>
                <value>hand</value>
                <value>deck</value>
                <value>locationDeck</value>
                <value>discard</value>
                <value>sideboard</value>
            </util:set>
        </property>
    </bean>

    <bean id="questFinishCondition" class="com.gempukku.tcg.generic.conditions.GameObjectEqualsCondition">
        <property name="gameObject" value="finished"/>
        <property name="value" value="true"/>
    </bean>

    <bean id="questGameStateEvaluator" class="com.gempukku.tcg.quest.QuestGameStateEvaluator" scope="prototype"/>

    <bean id="questGameStateObserverFactory" class="com.gempukku.tcg.quest.QuestGameStateObserverFactory"/>

    <bean id="questTurnOrder" class="com.gempukku.tcg.generic.mtg.objects.TurnOrder" scope="prototype"/>

    <bean id="questMessageDisplay" class="com.gempukku.tcg.generic.objects.MessageDisplay" scope="prototype"/>
</beans>