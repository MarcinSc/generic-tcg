<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
            http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">

    <bean id="setupGameFlow" class="com.gempukku.tcg.generic.flow.MultiActionGameFlow">
        <property name="gameActions">
            <util:list>
                <!-- select starting characters -->
                <bean class="com.gempukku.tcg.generic.player.ForEachPlayerAction">
                    <property name="playerAttribute" value="player"/>
                    <property name="gameAction">
                        <bean class="com.gempukku.tcg.generic.action.EffectsGameObjectAction">
                            <property name="effects">
                                <util:list>
                                    <bean class="com.gempukku.tcg.overpower.effect.SelectArbitraryCardsFromStackEffect">
                                        <property name="attributeName">
                                            <bean class="com.gempukku.tcg.generic.evaluator.ConcatenateStringEvaluator">
                                                <property name="stringEvaluators">
                                                    <util:list>
                                                        <value>selectedCharacters.</value>
                                                        <bean class="com.gempukku.tcg.generic.evaluator.AttributeValueStringEvaluator">
                                                            <property name="propertyName" value="player"/>
                                                        </bean>
                                                    </util:list>
                                                </property>
                                            </bean>
                                        </property>
                                        <property name="min" value="3"/>
                                        <property name="max" value="3"/>
                                        <property name="player" value="*{player}"/>
                                        <property name="stackType" value="setupCharacters"/>
                                    </bean>
                                </util:list>
                            </property>
                        </bean>
                    </property>
                </bean>
                <!-- put starting characters in front-line -->
                <bean class="com.gempukku.tcg.generic.player.ForEachPlayerAction">
                    <property name="playerAttribute" value="player"/>
                    <property name="gameAction">
                        <bean class="com.gempukku.tcg.generic.action.EffectsGameObjectAction">
                            <property name="effects">
                                <util:list>
                                    <bean class="com.gempukku.tcg.overpower.effect.MoveObjectsBetweenStacksEffect">
                                        <property name="player" value="*{player}"/>
                                        <property name="stackFrom" value="setupCharacters"/>
                                        <property name="stackTo" value="frontLineZone"/>
                                        <property name="ids">
                                            <bean class="com.gempukku.tcg.generic.evaluator.ConcatenateStringEvaluator">
                                                <property name="stringEvaluators">
                                                    <util:list>
                                                        <value>selectedCharacters.</value>
                                                        <bean class="com.gempukku.tcg.generic.evaluator.AttributeValueStringEvaluator">
                                                            <property name="propertyName" value="player"/>
                                                        </bean>
                                                    </util:list>
                                                </property>
                                            </bean>
                                        </property>
                                    </bean>
                                </util:list>
                            </property>
                        </bean>
                    </property>
                </bean>
                <!-- put remaining characters in reserve -->
                <bean class="com.gempukku.tcg.generic.player.ForEachPlayerAction">
                    <property name="playerAttribute" value="player"/>
                    <property name="gameAction">
                        <bean class="com.gempukku.tcg.generic.action.EffectsGameObjectAction">
                            <property name="effects">
                                <util:list>
                                    <bean class="com.gempukku.tcg.overpower.effect.MoveObjectsBetweenStacksEffect">
                                        <property name="player" value="*{player}"/>
                                        <property name="stackFrom" value="setupCharacters"/>
                                        <property name="stackTo" value="reserveZone"/>
                                    </bean>
                                </util:list>
                            </property>
                        </bean>
                    </property>
                </bean>
            </util:list>
        </property>
    </bean>

    <bean id="startGameFlow" class="com.gempukku.tcg.overpower.StartPhaseGameFlow"/>


</beans>